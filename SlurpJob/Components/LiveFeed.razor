@using SlurpJob.Models
@using SlurpJob.Services
@inject IngestionService Ingestion
@inject ILogger<LiveFeed> Logger
@implements IDisposable

<div class="card bg-dark text-light h-100 d-flex flex-column">
    <div class="card-header flex-shrink-0">
        <h5 class="card-title mb-0">Live Feed</h5>
        <span class="badge bg-success float-end">Live</span>
    </div>
    <div class="card-body p-0 overflow-auto flex-grow-1">
        <div class="list-group list-group-flush">
            @foreach (var evt in _events)
            {
                <button type="button" class="list-group-item list-group-item-action bg-dark text-light border-secondary" @onclick="() => OnEventClick(evt)">
                    <div class="d-flex w-100 justify-content-between align-items-start mb-1">
                        <small class="text-secondary">@evt.Timestamp.ToString("HH:mm:ss")</small>
                        <small class="text-info">@evt.Protocol</small>
                    </div>
                    <div class="mb-1 text-truncate">
                        <span class="fw-bold text-warning">[@evt.CountryCode]</span>
                        <span class="mx-1">&rarr;</span>
                        <span class="text-danger">Port @evt.TargetPort</span>
                    </div>
                    <div class="mb-1">
                        <small class="text-white-50">
                            @evt.ClassifierName
                        </small>
                         <span class="badge @GetTagColor(evt.PrimaryTag)">@evt.PrimaryTag</span>
                    </div>
                </button>
            }
        </div>
    </div>
</div>

@code {
    // ViewModel to avoid circular references and serialization scope issues
    public class LiveEventViewModel
    {
        public DateTime Timestamp { get; set; }
        public string Protocol { get; set; } = "";
        public string CountryCode { get; set; } = "";
        public int TargetPort { get; set; }
        public string ClassifierName { get; set; } = "";
        public IncidentTag PrimaryTag { get; set; }
        public byte[] PayloadBlob { get; set; } = Array.Empty<byte>();
        
        // Keep original ref if needed, but risky for serialization
        // public IncidentLog Original { get; set; } 
    }

    private List<LiveEventViewModel> _events = new();
    
    // We change the callback to return the ViewModel or reconstruct it from VM
    [Parameter] public EventCallback<IncidentLog> OnEventSelected { get; set; }

    protected override void OnInitialized()
    {
        Logger.LogInformation("LiveFeed: Initializing...");
        Ingestion.OnNewIncident += HandleIncident;
    }
    
    private async void HandleIncident(IncidentLog incident)
    {
        try 
        {
            // Map to safe ViewModel IMMEDIATELY
            var safeVm = new LiveEventViewModel
            {
                Timestamp = incident.Timestamp,
                Protocol = incident.Protocol,
                CountryCode = incident.CountryCode,
                TargetPort = incident.TargetPort,
                ClassifierName = incident.ClassifierName,
                PrimaryTag = incident.PrimaryTag,
                PayloadBlob = incident.Evidence?.PayloadBlob ?? Array.Empty<byte>()
            };

            await InvokeAsync(() =>
            {
                _events.Insert(0, safeVm);
                if (_events.Count > 100) _events.RemoveAt(_events.Count - 1);
                StateHasChanged();
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "LiveFeed: Error handling incident");
        }
    }

    private void OnEventClick(LiveEventViewModel vm)
    {
        // Reconstruct a dummy IncidentLog to satisfy the callback signature
        // Or better, update callback to use VM, but for now allow compatible interface
        var dummy = new IncidentLog
        {
            Timestamp = vm.Timestamp,
            Protocol = vm.Protocol,
            CountryCode = vm.CountryCode,
            TargetPort = vm.TargetPort,
            ClassifierName = vm.ClassifierName,
            PrimaryTag = vm.PrimaryTag,
            Evidence = new EvidenceLocker { PayloadBlob = vm.PayloadBlob }
        };
        
        OnEventSelected.InvokeAsync(dummy);
    }
    
    private string GetTagColor(IncidentTag tag) => tag switch {
        IncidentTag.Exploit => "bg-danger",
        IncidentTag.Recon => "bg-warning text-dark",
        IncidentTag.Garbage => "bg-secondary",
        _ => "bg-info text-dark"
    };

    public void Dispose()
    {
        Ingestion.OnNewIncident -= HandleIncident;
    }
}
